create table if not exists paas_account(
    id int(11) auto_increment,
    username varchar(50) not null,
    password varchar(32) not null,
    status tinyint(1) not null,
    realname varchar(10) not null,
    college varchar(50) not null,
    specialty varchar(100) not null,
    number varchar(20) not null,
    joinTime timestamp,
    primary key(id),
    unique(username)
);

create table if not exists paas_app(
    id int(11) auto_increment,
    title varchar(50) not null,
    description varchar(200) not null,
    uid int(11) not null,
    language varchar(10) not null,
    host varchar(255) not null,
    gitUrl varchar(255) not null,
    remoteServer varchar(255) not null,
    remoteSocket varchar(255) not null,
    status tinyint(1),
    appAccount varchar(50) not null,
    appGroup varchar(50) not null,
    appPath varchar(255) not null,
    createTime timestamp,
    primary key(id),
    unique(host)
);

create table if not exists paas_db(
    id int(11) auto_increment,
    uid int(11) not null,
    aid int(11) not null,
    dbName varchar(100) not null,
    username varchar(100) not null,
    password varchar(32) not null,
    host varchar(255) not null,
    port varchar(10) not null,
    createTime timestamp,
    primary key(id)
);


#git操作队列防止应用同时更新
create table if not exists paas_gitQueue(
    id int(11) auto_increment not null,
    aid int(11) not null,
    command varchar(50) not null,
    gitUrl varchar(255) not null,
    executeSql varchar(255) not null,
    appAccount varchar(50) not null,
    appGroup varchar(50) not null,
    appPath varchar(255) not null,
    primary key(id)
)ENGINE= MEMORY;


create table if not exists paas_app_token(
    id int(11) auto_increment,
    aid int(11) not null,
    apiKey varchar(32) not null,
    secretKey varchar(32) not null,
    createTime timestamp,
    primary key(id),
    unique(aid)
);
